
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<style>
    /*css PHẦN THỐNG KÊ DOANH THU*/
    .thongkedoanhthu {
        background-color: #d2de32;
        background-image: linear-gradient(315deg, #d2de32 20%, #273c16 75%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .accordion-button {
        background-color: #434242;
        background-image: linear-gradient(180deg, #434242 0%, #7d7463 46%, #a8a196 100%);
    }

    .item-thongke-text {
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: 700;
        color: #424242;
    }
</style>



<!-- TOP của phần content chính -->
<div class="row content-center-top">
    <div class="col-md-3">
        <div class="content-center-top-item">
            <img src="~/Content/images/quanlyloaisanpham1.jpg" alt="">
            @Html.ActionLink("Quản lý Loại Sản Phẩm", "Index", "LoaiSPs")
        </div>
    </div>
    <div class="col-md-3">
        <div class="content-center-top-item">
            <img src="~/Content/images/quanlysanpham1.jpg" alt="">
            @Html.ActionLink("Quản lý Sản Phẩm", "Index", "SanPhams")
        </div>
    </div>
    <div class="col-md-3">
        <div class="content-center-top-item">
            <img src="~/Content/images/quanlynhanvien1.jpg" alt="">
            @Html.ActionLink("Quản lý Nhân Viên", "Index", "UserIDs")

        </div>
    </div>
    <div class="col-md-3">
        <div class="content-center-top-item">
            <img src="~/Content/images/quanlydathang.png" alt="">
            @Html.ActionLink("Quản lý Đơn hàng", "Index", "DonHangs")
        </div>
    </div>

</div>

<div class="row content-center-top">
    <div class="col-md-3">
        <img style="width: 100%; border: 5px #DDDDDD solid;" src="https://tronhouse.com/assets/data/editor/source/chup%20hinh%20san%20pham%2001189.jpg" alt="Alternate Text" />
    </div>
    <div class="col-md-3">
        <img style="width: 100%; border: 5px #DDDDDD solid " src="https://topdev.vn/blog/wp-content/uploads/2021/04/Website-1024x538.png" alt="Alternate Text" />
    </div>
    <div class="col-md-3">
        <img style="width: 100%; border: 5px #DDDDDD solid " src="https://tamphat.edu.vn/blog/wp-content/uploads/2020/10/1324.jpg" alt="Alternate Text" />
    </div>
    <div class="col-md-3">
        <img style="width: 100%; height: 160px; border: 5px #DDDDDD solid " src="https://gcalls.co/wp-content/uploads/2022/12/Untitled-1-01.jpg" alt="Alternate Text" />
    </div>
</div>

<div class="row content-center-top">
    <div class="col-md-6">
        @* PHẦN HIỂN THỊ ĐỂ TRỎ TỚI MÀN HÌNH BÁN HÀNG *@
        <a href="@Url.Action("ProductList","SanPhams")">
            <video controls style="width: 100%" src="~/Content/images/vidBanHang.mp4" class="object-fit-fill" autoplay></video>
        </a>
    </div>

    @* PHẦN HIỂN THỊ THỐNG KÊ DOANH THU *@
    <div class="col-md-6 thongkedoanhthu">
        <div class="accordion" id="accordionExample" style="margin-top: 50px;">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <h5 style="color: #fff; font-weight: 600; font-family: Verdana, Geneva, Tahoma, sans-serif">Thống kê doanh thu</h5>
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <a class="item-thongke-text" href="@Url.Action("ThongKeDoanhThu", "DonHangs")">Doanh thu của các ngày</a>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        <h5 href="#" style="color: #fff; font-weight: 600; font-family: Verdana, Geneva, Tahoma, sans-serif" ">Tình hình Kinh doanh</h5>
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <a class="item-thongke-text" href="@Url.Action("BieuDo", "DonHangs")">Biểu đồ thống kê doanh thu</a>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        <h5 href="#" style="color: #fff; font-weight: 600; font-family: Verdana, Geneva, Tahoma, sans-serif" ">Thông báo chi tiết</h5>
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        Tình hình kinh doanh khá là ổn
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


